<h1>Listing People</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Income</th>
      <th>Role</th>
      <th>Family</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.income %></td>
        <td><%= person.role %></td>
        <td><%= person.family.lastname %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

